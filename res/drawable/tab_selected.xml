<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- draw bottom line to fill the spaces between tabs -->
    <item android:top="63dp">
        <shape android:shape="rectangle" >
            <solid android:color="#000000" />
        </shape>
    </item>
    <!-- leave bottom line only 1px of height, the rest is masked out -->
    <item android:top="63dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/app_background" />
        </shape>
    </item>
    <!-- draw tab background -->
    <item>
        <shape android:shape="rectangle" >
            <corners
                android:bottomLeftRadius="0.1dp"
                android:bottomRightRadius="0.1dp" />

            <gradient
                android:angle="90"
                android:endColor="@color/_press_end"
                android:startColor="@color/_press_start" />

            <stroke
                android:width="1px"
                android:color="#000000" />
        </shape>
    </item>

</layer-list>