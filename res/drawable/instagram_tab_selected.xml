<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- draw bottom line to fill the spaces between tabs -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#336188" />

            <stroke
                android:width="1px"
                android:color="#1E1E1E" />
        </shape>
    </item>
    <!-- leave bottom line only 1px of height, the rest is masked out -->


    <!-- draw tab background -->
    <item android:top="7dp">
        <shape android:shape="rectangle" >
            <corners
                android:bottomLeftRadius="0.1dp"
                android:bottomRightRadius="0.1dp" />

            <gradient
                android:angle="90"
                android:endColor="@color/instagram_text_tab_selected"
                android:startColor="@color/instagram_text_tab_unselected" />
        </shape>
    </item>

</layer-list>